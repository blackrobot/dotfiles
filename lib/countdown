# Countdown seconds
function countdown() {
   date1=$((`date +%s` + $1));
   spacer="  "
   while [[ "$date1" -ne `date +%s` ]]; do
     showtime="$(date -u --date @$(($date1 - `date +%s`)) +%H:%M:%S)"
     echo -ne "${spacer}${fg_bold[red]}âŒš  ${fg_bold[white]}${showtime}${reset_color}\r";
   done
}
