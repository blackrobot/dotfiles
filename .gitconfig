# default username and email
[user]
  name = damon

[alias]
  d = difftool

[color]
  branch = auto
  diff = auto
  status = auto
  interactive = auto
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[github]
  user = blackrobot

[status]
  relativePaths = false

[merge]
  tool = vimdiff
  conflictstyle = diff3
  prompt = false
  stat = true
  keepBackup = false
  trustExitCode = true

[mergetool]
  path = nvim
# [mergetool "vimdiff"]
#   cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
#   trustExitCode = true
#   keepBackup = false
#   prompt = false

[diff]
  # tool = vimdiff
  suppressBlankEmpty = true
  mnemonicprefix = true
  prompt = false

# [difftool "vimdiff"]
#   cmd = mvim -f -d \"$LOCAL\" \"REMOTE\"
#   prompt = false

[branch]
  autosetupmerge = true

[pager]
  diff = "diff-so-fancy | less --tabs=4 -RFX"
  show = "diff-so-fancy | less --tabs=4 -RFX"

[core]
  whitespace = trailing-space,space-before-tab
	excludesfile = /Users/damon/.gitignore_global

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[push]
	default = simple

[include]
  path = ~/.gitconfig.local
