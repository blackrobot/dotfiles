[include]
  path = ~/.gitconfig.local

[user]
  name = "Damon Jablons"
  email = damonjablons@gmail.com

[alias]
  d = difftool

[color]
  branch = auto
  diff = auto
  status = auto
  interactive = auto
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[github]
  user = blackrobot

[merge]
  tool = vimdiff

[status]
  relativePaths = true

[diff]
  tool = vimdiff
  suppressBlankEmpty = true
  mnemonicprefix = true

[mergetool]
  keepBackup = false

[difftool]
  prompt = false

[branch]
  autosetupmerge = true
