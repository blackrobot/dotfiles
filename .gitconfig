# default username and email
[user]
  name = damon

[alias]
  d = difftool

[status]
  showUntrackedFiles = all

[color]
  branch = auto
  diff = auto
  status = auto
  interactive = auto
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[github]
  user = blackrobot

[status]
  relativePaths = false

[branch]
  autosetupmerge = true

[pager]
  diff = "diff-so-fancy | less --tabs=4 -RFX"
  show = "diff-so-fancy | less --tabs=4 -RFX"

[core]
  whitespace = trailing-space,space-before-tab
	excludesfile = ~/.gitignore_global

[push]
	default = simple

[diff]
  suppressBlankEmpty = true
  mnemonicprefix = true
  prompt = false

[merge]
  keepBackup = false
  prompt = false
  stat = true
  tool = meld
  # conflictstyle = diff3
  # trustExitCode = true

[difftool]
  prompt = false

[mergetool]
  prompt = false

[difftool "meld"]
  trustExitCode = true
	cmd = open -W -a Meld --args \"$LOCAL\" \"$PWD/$REMOTE\"

[mergetool "meld"]
  trustExitCode = true
	cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"

[include]
  path = ~/.gitconfig.local
