{
    /* Main config */
    "editor.fontLigatures": true,
    "editor.fontFamily": "Operator Mono",
    "editor.fontSize": 13.75,
    "editor.lineHeight": 0,
    "editor.renderWhitespace": "boundary",
    "editor.lineNumbers": "relative",
    "editor.rulers": [88, 120],
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false,
    },
    "editor.occurrencesHighlight": false,
    "editor.renderLineHighlight": "all",
    "editor.renderControlCharacters": true,
    "editor.roundedSelection": true,
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "editor.overviewRulerBorder": true,
    "editor.tabCompletion": true,
    "editor.snippetSuggestions": "bottom",
    "editor.parameterHints": false,
    "editor.suggestFontSize": 13,

    "extensions.ignoreRecommendations": false,
    "extensions.showRecommendationsOnlyOnDemand": true,

    "explorer.openEditors.visible": 0,
    "workbench.editor.showTabs": true,

    "files.defaultLanguage": "markdown",
    "files.useExperimentalFileWatcher": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },

    "problems.decorations.enabled": true,

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tags": true
    },
    "search.location": "panel",
    "search.quickOpen.includeSymbols": true,

    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",
    "terminal.integrated.scrollback": 2000,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.shellArgs.osx": [],

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "window.openFilesInNewWindow": "default",
    "window.nativeTabs": false,
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "window.zoomLevel": 0,

    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.labelFormat": "short",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.visible": false,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.tips.enabled": true,

    "workbench.colorTheme": "One Dark Pro Vivid",
    "workbench.colorCustomizations": {
        "[Dracula]": {
            "editorLineNumber.activeForeground": "#ffffffde",
            "editorRuler.foreground": "#ffffff0f",
            "editorWhitespace.foreground": "#ffffff0a",
            "editor.lineHighlightBackground": "#ffffff05",
            "editor.lineHighlightBorder": "#ffffff00",
            "editor.findMatchHighlightBackground": "#fce4ec0a",
            "editor.findMatchHighlightBorder": "#fce4ec4f",
            "editor.findMatchBackground": "#c2185b", /* PINK 700 */
        },
        "[One Dark Pro Vivid]": {
            "tab.border": "#00000020",
            "tab.activeBorder": "#00000020",
            "editorGroupHeader.tabsBorder": "#00000000",
            "editor.findMatchBorder": "#457dff60",
        },
        /*
        "[Palenight Operator]": {
            "editorLineNumber.activeForeground": "#ffffffde",
            "editorRuler.foreground": "#ffffff0f",
            "editorWhitespace.foreground": "#ffffff0e",
            "editorIndentGuide.background": "#ffffff0f",
            "sideBar.foreground": "#B9BDCF",
        },
        */
    },
    "editor.tokenColorCustomizations": {
        "[Dracula]": {
            "comments": { "fontStyle": "italic" },
            "strings": { "foreground": "#E9F284E7" },
        },
        "[One Dark Pro Vivid]": {
            "textMateRules": [
                {
                    "scope": [
                        "source.json meta.structure.dictionary support.type.property-name.json",
                        "string.quoted.docstring.multi.python",
                    ],
                    "settings": {
                        "fontStyle": "italic",
                    },
                },
                {
                    "scope": [
                        "string.quoted.docstring.multi.python punctuation.definition.string.begin",
                        "string.quoted.docstring.multi.python punctuation.definition.string.end",
                    ],
                    "settings": {
                        "fontStyle": "",
                    }
                },
                {
                    "scope": [
                        "string.quoted.docstring.multi.python",
                        "string.quoted.docstring.multi.python punctuation.definition.string.begin",
                        "string.quoted.docstring.multi.python punctuation.definition.string.end",
                    ],
                    "settings": {
                        "foreground": "#7F848E",
                    },
                },
                {
                    "scope": [
                        "string",
                        "punctuation.definition.string.begin", //{ "foreground": "#98c378" }
                        "punctuation.definition.string.end",
                    ],
                    "settings": {
                        // "foreground": "#89CA78",
                        // "foreground": "#bfe2b6",
                        "foreground": "#9fd392",
                    }
                }
            ],
        },
        /*
        "[Palenight Operator]": {
            // "strings": { "fontStyle": "" },
            "textMateRules": [
                {
                    "name": "JSON Property Names",
                    "scope": [
                        "source.json meta.structure.dictionary support.type.property-name.json",
                    ],
                    "settings": {
                        "foreground": "#A29BC0",
                        "fontStyle": "",
                    },
                },
            ]
        },
        */
    },

    /* Vim config */
    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.visualstar": true,
    "vim.foldfix": false,  // causes bug when `true` - git.io/vbfWp
    // vim: easy motion
    "vim.easymotion": true,
    "vim.easymotionMarkerFontWeight": "bold",
    // vim: status bar
    "vim.showmodename": true,
    "vim.statusBarColorControl": false,
    /*
    "vim.statusBarColors" : {
        "normal": "#212121",
        "insert": "#0288d1",
        "visual": "#f50057",
        "visualline": "#f50057",
        "visualblock": "#e53935",
        "replace": "#d50000"
    },
    */
    "vim.cursorStylePerMode": {
        "normal": "block",
        "insert": "line",
        "replace": "underline",
        "visual": "block-outline",
        "visualline": "block-outline",
        "visualblock": "block-outline"
    },
    // vim: neovim
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    // vim: key bindings
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-l>"],
            "after": ["<Esc>"],
            "commands": [
                {
                    "command": ":nohl",
                },
                {
                    // "command": "search.action.clearSearchResults",
                    "command": "closeFindWidget",
                },
            ],
        },
        {
            "before": ["<C-w>H"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.moveEditorToPreviousGroup",
                    "args": [],
                },
            ],
        },
        {
            "before": ["<C-w>L"],
            "after": [],
            "commands": [{
                "command": "workbench.action.moveEditorToNextGroup",
                "args": [],
            }],
        },
    ],

    // "material-icon-theme.folders.color": "#42a5f5",
    "material-icon-theme.showUpdateMessage": false,
    "material-icon-theme.folders.color": "#42a5f5",
    "material-icon-theme.opacity": 0.9,

    /* Python config */
    "[python]": {
        "editor.rulers": [72, 79, 120],
        "editor.wordWrap": "off",
        "editor.tabSize": 4
    },
    "python.pythonPath": "/usr/local/opt/python3/bin/python3.6",
    "python.venvPath": "~/.pyenv/versions/",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "python.autoComplete.addBrackets": false,

    // "python.workspaceSymbols.ctagsPath": "/usr/local/bin/ctags",
    // "python.workspaceSymbols.tagFilePath": "${workspaceFolder}/.vscode/tags",
    "python.workspaceSymbols.enabled": true,
    "python.workspaceSymbols.rebuildOnFileSave": true,
    "python.workspaceSymbols.rebuildOnStart": true,

    /* Markdown config */
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
    },
    "markdown.extension.italic.indicator": "_",
    "markdown.extension.toc.githubCompatibility": true,
    "markdown.extension.toc.orderedList": false,
    "markdown.extension.toc.updateOnSave": false,

    /* Other extension config */
    "git.enableCommitSigning": true,

    "todohighlight.include": [
        "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.html",
        "**/*.php", "**/*.css", "**/*.scss", "**/*.py", "**/*.md",
        ""
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "#F44336",
        "color": "#FFF",
    },
    "todohighlight.keywords": [
        "TODO:", "FIXME:", "???:", "!!!:", "BUG:",
        {
            "text": "HACK:",
            "backgroundColor": "#9C27B0",
        },
        {
            "text": "NOTE:",
            "backgroundColor": "#2196F3",
        },
    ],
    "gitlens.gitExplorer.files.layout": "auto",
    // "vsicons.dontShowNewVersionMessage": true,
    "explorer.confirmDelete": false,

    "sync.gist": "f2aa95e3b9fe5f217af6a3399005b514",
    "sync.autoUpload": false,
    "sync.autoDownload": false,
    "sync.forceDownload": false,
    "sync.lastDownload": "",
    "sync.lastUpload": "2018-03-24T20:39:45.400Z",
    "sync.host": "",
    "sync.pathPrefix": "",
    "sync.quietSync": true,
    "sync.askGistName": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": true,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": true
    },

    "files.associations": {
        "*.sh": "shellscript",
        "*.bash": "shellscript",
        "*.zsh": "shellscript",
        "*.env": "properties",
        ".gitconfig*": "properties",
        "*Dockerfile*": "dockerfile"
    },

    "spellright.statusBarIndicator": false,
    "spellright.ignoreFiles": [
        "**/requirements.txt",
        "**/requirements/*.txt",
        "**/.gitignore",
        "**/.spellignore"
    ],

    /* Project Manager */
    "projectManager.git.baseFolders": [
        "$home/Workspace"
    ],
    "projectManager.git.ignoredFolders": [
        "build",
        "node_modules",
        "test",
        ".tmp"
    ],
    "projectManager.vscode.baseFolders": [
        "$home/Workspace"
    ],
    "projectManager.vscode.ignoredFolders": [
        "build",
        "node_modules",
        "test",
        ".tmp"
    ],
    "projectManager.showProjectNameInStatusBar": false,
    "projectManager.removeCurrentProjectFromList": true,
    "projectManager.groupList": true,

    "markdownlint.config": {
        "MD001": false,
        "MD002": false,
        "MD004": false,
        "MD012": false,
        "MD013": false,
        "MD014": false,
        "MD026": false,
        "MD041": false,
    },
    "explorer.confirmDragAndDrop": false,
    "workbench.startupEditor": "newUntitledFile",

    "shellcheck.run": "onType",
    "shellcheck.customArgs": [
        "--external-sources",
    ],

    "gitlens.codeLens.scopes": [
        "document",
    ],
    "gitlens.recentChanges.highlight.locations": [
        "gutter",
        "line",
        "overview",
    ],

    "search.smartCase": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "workbench.statusBar.feedback.visible": false,
    "eslint.packageManager": "yarn",
    "[csv]": {
        "editor.minimap.enabled": true,
        "editor.minimap.maxColumn": 80,
        "editor.minimap.renderCharacters": false,
    },
    "gitlens.keymap": "alternate",
    "sync.removeExtensions": true,
    "sync.syncExtensions": true,
    "git.confirmSync": false,

    "emojisense.emojiDecoratorsEnabled": false,
    "emojisense.unicodeCompletionsEnabled": true,
    "gitlens.defaultDateFormat": "MMM Do, YYYY h:mma",
    "gitlens.historyExplorer.enabled": true,
    "gitlens.blame.format": "${authorAgoOrDate|40-}",
    "gitlens.statusBar.enabled": false,

    "prettier.trailingComma": "es5",
    "zenMode.centerLayout": false,
    "zenMode.hideActivityBar": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,
    "spellright.language": "en",
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "git-commit",
    ],
    "editor.tabSize": 2,
    "todohighlight.isEnable": true,
    "python.autoComplete.showAdvancedMembers": true,
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        ".tmp/**/*.py",
    ],
    "docker.showExplorer": true,
    "[git-commit]": {
        "editor.rulers": [50, 72],
    },
}
