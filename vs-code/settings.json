{
    /* Main config */
    "editor.fontLigatures": true,
    "editor.fontFamily": "Operator Mono",
    "editor.fontSize": 13.75,
    "editor.renderWhitespace": "boundary",
    "editor.lineNumbers": "relative",
    "editor.rulers": [79, 119],
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.occurrencesHighlight": false,
    "editor.renderLineHighlight": "all",
    "editor.renderControlCharacters": true,
    "editor.roundedSelection": true,
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "editor.tabSize": 2,
    "editor.overviewRulerBorder": true,
    "editor.tabCompletion": true,
    "editor.snippetSuggestions": "bottom",
    "editor.parameterHints": false,

    "explorer.openEditors.visible": 0,
    "workbench.editor.showTabs": true,

    "files.defaultLanguage": "markdown",
    "files.useExperimentalFileWatcher": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },

    "problems.decorations.enabled": true,

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tags": true
    },
    "search.quickOpen.includeSymbols": true,

    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",
    "terminal.integrated.scrollback": 2000,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.shellArgs.osx": [],

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "window.openFilesInNewWindow": "default",
    "window.nativeTabs": false,
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "window.zoomLevel": 0,

    "workbench.colorTheme": "Dracula",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.labelFormat": "short",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.visible": false,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.tips.enabled": true,

    "workbench.colorCustomizations": {
        // "statusBar.background": "#212121",
        // "statusBar.noFolderBackground": "#212121",
        // "statusBar.debuggingBackground": "#212121"
        // "statusBar.border": "#0000001a",
        "editorRuler.foreground": "#ffffff0f",
        "editorWhitespace.foreground": "#ffffff0a",
        "editor.lineHighlightBackground": "#ffffff05",
        "editor.lineHighlightBorder": "#ffffff00",
    },
    "editor.tokenColorCustomizations": {
        /*
        "lightBlue": "#8af1eb",
        "pink": "#dea2f6",
        "blue": "#7eb3e1",
        "white": "#f5faff",
        "darkGray": "#2a2e37",
        "bgGray": "#2a2d38"
        */
        "comments": {
            "fontStyle": "italic"
        },
        "strings": {
            "foreground": "#E9F284E7"
        }
    },

    /*
    "workbench.colorCustomizations": {
        "statusBar.background": "#0288d1",
        "statusBar.noFolderBackground": "#0288d1",
        "statusBar.debuggingBackground": "#0288d1"
        // "editor.lineHighlightBackground": "#282D39"
        // "editor.lineHighlightBackground": "#30353F"
    },
    */

    /* Vim config */
    "vim.leader": ",",
    "vim.cmdLineInitialColon": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.visualstar": true,
    "vim.foldfix": false,  // causes bug when `true` - git.io/vbfWp
    // vim: easy motion
    "vim.easymotion": true,
    "vim.easymotionMarkerFontWeight": "bold",
    // vim: status bar
    "vim.showmodename": true,
    "vim.statusBarColorControl": false,
    "vim.statusBarColors" : {
        "normal": "#212121",
        "insert": "#0288d1",
        "visual": "#f50057",
        "visualline": "#f50057",
        "visualblock": "#e53935",
        "replace": "#d50000"
    },
    "vim.cursorStylePerMode": {
        "normal": "block",
        "insert": "line",
        "replace": "underline",
        "visual": "block-outline",
        "visualline": "block-outline",
        "visualblock": "block-outline"
    },
    // vim: neovim
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    // vim: key bindings
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["<C-n>"],
            "after": [],
            "commands": [{
                // "command": ":nohlsearch",
                "command": ":nohl",
                "args": []
            }]
        }
    ],


    /* Python config */
    "[python]": {
        "editor.rulers": [72, 79, 119],
        "editor.wordWrap": "off",
        "editor.tabSize": 4
    },
    "python.pythonPath": "/usr/local/opt/python3/bin/python3.6",
    "python.venvPath": "~/.pyenv/versions/",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "python.autoComplete.addBrackets": false,

    /* Markdown config */
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
    },
    "markdown.extension.italic.indicator": "_",

    /* Other extension config */
    "git.enableCommitSigning": true,

    "todohighlight.include": [
        "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.html",
        "**/*.php", "**/*.css", "**/*.scss", "**/*.py", "**/*.md",
        ""
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "#b71c1c",
        "color": "#FFF",
        "borderRadius": "2px",
        "padding": "1px"
    },
    "todohighlight.keywords": [
        "TODO:",
        "FIXME:",
        {
            "text": "XXX:",
            "color": "#FFF",
            "backgroundColor": "#b71c1c"
        },
        "???:",
        "!!!:",
        "BUG:",
        "HACK:",
        {
            "text": "NOTE:",
            "color": "#FFF",
            "backgroundColor": "#2196F3",
            "isWholeLine": false
        },
        "INFO:",
        "IDEA:"
    ],
    "gitlens.gitExplorer.files.layout": "tree",
    "material-icon-theme.showUpdateMessage": false,
    "vsicons.dontShowNewVersionMessage": true,
    "explorer.confirmDelete": false,

    "sync.gist": "f2aa95e3b9fe5f217af6a3399005b514",
    "sync.autoUpload": false,
    "sync.autoDownload": false,
    "sync.forceDownload": false,
    "sync.anonymousGist": false,
    "sync.lastDownload": "",
    "sync.lastUpload": "2017-12-21T01:41:13.700Z",
    "sync.host": "",
    "sync.pathPrefix": "",
    "sync.quietSync": true,
    "sync.askGistName": false,
    "extensions.ignoreRecommendations": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": true,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": true
    },

    "files.associations": {
        "*.sh": "shellscript",
        "*.bash": "shellscript",
        "*.zsh": "shellscript",
        "*.env": "properties",
        ".gitconfig*": "properties",
        "*Dockerfile*": "dockerfile"
    },

    "spellright.statusBarIndicator": false,
    "spellright.ignoreFiles": [
        "**/requirements.txt",
        "**/requirements/*.txt",
        "**/.gitignore",
        "**/.spellignore"
    ],

    /* Project Manager */
    "projectManager.git.baseFolders": [
        "$home/Workspace"
    ],
    "projectManager.git.ignoredFolders": [
        "build",
        "node_modules",
        "test",
        ".tmp"
    ],
    "projectManager.vscode.baseFolders": [
        "$home/Workspace"
    ],
    "projectManager.vscode.ignoredFolders": [
        "build",
        "node_modules",
        "test",
        ".tmp"
    ],
    "projectManager.showProjectNameInStatusBar": false,
    "projectManager.removeCurrentProjectFromList": true,
    "projectManager.groupList": true,

    "markdownlint.config": {
        "MD001": false,
        "MD004": false,
        "MD013": false,
        "MD014": false,
        "MD041": false
    },
    "explorer.confirmDragAndDrop": false,
    "workbench.startupEditor": "newUntitledFile",

    "shellcheck.run": "onType",
    "shellcheck.customArgs": [
        "--external-sources",
    ],

    "gitlens.codeLens.scopes": [
        "document",
    ],
    "gitlens.statusBar.enabled": false,
    "gitlens.recentChanges.highlight.locations": [
        "gutter",
        "line",
        "overview",
    ],

    "symbolOutline.doSelect": false,
}
