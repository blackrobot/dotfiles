{
    /* Main config */
    "editor.fontLigatures": true,
    "editor.fontFamily": "Operator Mono",
    "editor.fontSize": 14.00,
    "editor.lineHeight": 0,
    "editor.renderWhitespace": "boundary",
    "editor.lineNumbers": "relative",
    "editor.rulers": [88, 120],
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false,
    },
    "editor.occurrencesHighlight": false,
    "editor.renderLineHighlight": "all",
    "editor.renderControlCharacters": true,
    "editor.roundedSelection": true,
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "editor.overviewRulerBorder": true,
    "editor.tabCompletion": "on",
    "editor.snippetSuggestions": "bottom",
    // "editor.parameterHints": false,
    "editor.suggestFontSize": 13,

    "extensions.ignoreRecommendations": false,
    "extensions.showRecommendationsOnlyOnDemand": true,

    "explorer.openEditors.visible": 5,

    "files.defaultLanguage": "markdown",
    "files.useExperimentalFileWatcher": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },

    "problems.decorations.enabled": true,

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tags": true
    },
    "search.location": "sidebar",

    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",
    "terminal.integrated.scrollback": 2000,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.shellArgs.osx": ["-l"],
    "terminal.integrated.rendererType": "canvas",

    "telemetry.enableTelemetry": false,

    "window.openFilesInNewWindow": "default",
    "window.nativeTabs": false,
    "window.title": "${activeEditorMedium}${separator}${rootName} ${dirty}",
    "window.zoomLevel": 0,
    "workbench.editor.labelFormat": "short",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.visible": false,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.tips.enabled": true,

    "workbench.colorTheme": "Dracula",
    "workbench.colorCustomizations": {
        "[Dracula]": {
            "editorLineNumber.activeForeground": "#ffffffde",
            "editorRuler.foreground": "#ffffff0f",
            "editorWhitespace.foreground": "#ffffff0a",
            "editor.lineHighlightBackground": "#ffffff05",
            "editor.lineHighlightBorder": "#ffffff00",
            "editor.findMatchHighlightBackground": "#fce4ec0a",
            "editor.findMatchHighlightBorder": "#fce4ec4f",
            "editor.findMatchBackground": "#c2185b",
            // "breadcrumb": "#ff0000"
        },
        "[One Dark Pro Vivid]": {
            "tab.border": "#00000020",
            "tab.activeBorder": "#00000020",
            "editorGroupHeader.tabsBorder": "#00000000",
            "editor.findMatchBorder": "#457dff60"
        },
    },
    "editor.tokenColorCustomizations": {
        "[Dracula]": {
            "comments": { "fontStyle": "italic" },
            "strings": { "foreground": "#E9F284E7" },
        },
        "[One Dark Pro Vivid]": {
            "textMateRules": [
                {
                    "scope": [
                        "source.json meta.structure.dictionary support.type.property-name.json",
                        "string.quoted.docstring.multi.python",
                    ],
                    "settings": {
                        "fontStyle": "italic",
                    },
                },
                {
                    "scope": [
                        "string.quoted.docstring.multi.python punctuation.definition.string.begin",
                        "string.quoted.docstring.multi.python punctuation.definition.string.end",
                    ],
                    "settings": {
                        "fontStyle": "",
                    }
                },
                {
                    "scope": [
                        "string.quoted.docstring.multi.python",
                        "string.quoted.docstring.multi.python punctuation.definition.string.begin",
                        "string.quoted.docstring.multi.python punctuation.definition.string.end",
                    ],
                    "settings": {
                        "foreground": "#7F848E",
                    },
                },
                {
                    "scope": [
                        "string",
                        "punctuation.definition.string.begin", //{ "foreground": "#98c378" }
                        "punctuation.definition.string.end",
                    ],
                    "settings": {
                        // "foreground": "#89CA78",
                        // "foreground": "#bfe2b6",
                        "foreground": "#9fd392",
                    }
                }
            ],
        },
    },

    /* Vim config
     *   https://github.com/vscodevim/vim/blob/master/README.md
     *   https://github.com/vscodevim/vim/blob/master/ROADMAP.md#custom-commands
     */
    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.visualstar": true,
    "vim.foldfix": false,  // causes bug when `true` - git.io/vbfWp
    // vim: easy motion
    "vim.easymotion": true,
    "vim.easymotionMarkerFontWeight": "bold",
    // vim: status bar
    "vim.showmodename": true,
    "vim.statusBarColorControl": false,
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.replace": "underline",
    "vim.cursorStylePerMode.visual": "block-outline",
    "vim.cursorStylePerMode.visualline": "block-outline",
    "vim.cursorStylePerMode.visualblock": "block-outline",
    // vim: neovim
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    // vim: key bindings
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-l>"],
            "after": ["<Esc>"],
            "commands": [
                {
                    "command": ":nohl",
                },
                {
                    // "command": "search.action.clearSearchResults",
                    "command": "closeFindWidget",
                },
            ],
        },
        {
            "before": ["<C-w>H"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.moveEditorToPreviousGroup",
                    "args": [],
                },
            ],
        },
        {
            "before": ["<C-w>L"],
            "after": [],
            "commands": [{
                "command": "workbench.action.moveEditorToNextGroup",
                "args": [],
            }],
        },
        {
            // Toggle breadcrumbs
            "before": ["<leader>", "b"],
            "commands": [{
                "command": "breadcrumbs.toggle",
            }],
        },
        {
            "before": ["<leader>", "="],
            "commands": [{
                "command": "workbench.action.minimizeOtherEditors",
            }],
        },
        {
            "before": ["g", "t"],
            "commands": [{
                "command": "workbench.action.terminal.focus",
            }],
        },
        {
            "before": ["<leader>", "o"],
            "commands": [{
                "command": "outline.focus",
            }],
        },
        // Temporary fix for undo and redo
        {
            "before": ["u"],
            "after": [],
            "commands": [
                {
                    "command": "undo",
                    "args": [],
                },
            ],
        },
        {
            "before": ["<C-r>"],
            "after": [],
            "commands": [
                {
                    "command": "redo",
                    "args": [],
                },
            ],
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],

    // "material-icon-theme.folders.color": "#42a5f5",
    "material-icon-theme.showUpdateMessage": false,
    "material-icon-theme.folders.color": "#e1bee7",
    "material-icon-theme.opacity": 1,
    "material-icon-theme.activeIconPack": "react_redux",
    // "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.folders.theme": "specific",
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.folders.associations": {
        "hogo": "python",
    },


    /* Python config */
    "[python]": {
        "editor.rulers": [72, 79, 120],
        "editor.wordWrap": "off",
        "editor.tabSize": 4
    },
    "python.pythonPath": "/Users/damon/.pyenv/versions/3.7.0/bin/python",
    "python.venvPath": "~/.pyenv/versions/",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "python.autoComplete.addBrackets": false,

    "python.globalModuleInstallation": true,

    // Use microsoft's python language server
    "python.jediEnabled": false,

    /* Markdown config */
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
    },
    "markdown.extension.italic.indicator": "_",
    "markdown.extension.toc.githubCompatibility": true,
    "markdown.extension.toc.orderedList": false,
    "markdown.extension.toc.updateOnSave": false,

    /* Other extension config */
    "git.enableCommitSigning": true,

    "todohighlight.include": [
        "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.html",
        "**/*.php", "**/*.css", "**/*.scss", "**/*.py", "**/*.md",
        ""
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "#F44336",
        "color": "#FFF",
    },
    "todohighlight.keywords": [
        "TODO:", "FIXME:", "???:", "!!!:", "\bBUG:",
        {
            "text": "HACK:",
            "backgroundColor": "#9C27B0",
        },
        {
            "text": "NOTE:",
            "backgroundColor": "#2196F3",
        },
    ],
    "gitlens.gitExplorer.files.layout": "auto",
    // "vsicons.dontShowNewVersionMessage": true,
    "explorer.confirmDelete": false,

    "sync.gist": "f2aa95e3b9fe5f217af6a3399005b514",
    "sync.autoUpload": true,
    "sync.autoDownload": false,
    "sync.forceDownload": false,
    "sync.quietSync": true,
    "sync.askGistName": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": true,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": true
    },

    "files.associations": {
        "*.sh": "shellscript",
        "*.bash": "shellscript",
        "*.zsh": "shellscript",
        "/tmp/{[a-z]sh,bash,!*.}*": "shellscript",
        "*.env": "properties",
        ".gitconfig*": "properties",
        "*Dockerfile*": "dockerfile",
        "*.toml": "toml"
    },

    "spellright.statusBarIndicator": false,
    "spellright.ignoreFiles": [
        "**/requirements.txt",
        "**/requirements/*.txt",
        "**/.gitignore",
        "**/.spellignore"
    ],

    /* Project Manager */
    "projectManager.git.baseFolders": [
        "$home/Workspace"
    ],
    "projectManager.git.ignoredFolders": [
        "build",
        "node_modules",
        "test",
        ".tmp"
    ],
    "projectManager.vscode.baseFolders": [
        "$home/Workspace"
    ],
    "projectManager.vscode.ignoredFolders": [
        "build",
        "node_modules",
        "test",
        ".tmp"
    ],
    "projectManager.showProjectNameInStatusBar": false,
    "projectManager.removeCurrentProjectFromList": true,
    "projectManager.groupList": true,

    "markdownlint.config": {
        "MD001": false,
        "MD002": false,
        "MD004": false,
        "MD012": false,
        "MD013": false,
        "MD014": false,
        "MD026": false,
        "MD041": false,
    },
    "explorer.confirmDragAndDrop": false,
    "workbench.startupEditor": "newUntitledFile",

    "shellcheck.run": "onType",
    "shellcheck.customArgs": [
        "--external-sources",
    ],

    "gitlens.codeLens.scopes": [
        "document",
    ],
    "gitlens.recentChanges.highlight.locations": [
        "gutter",
        "line",
        "overview",
    ],

    "search.smartCase": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "workbench.statusBar.feedback.visible": false,
    "[csv]": {
        "editor.minimap.enabled": true,
        "editor.minimap.maxColumn": 80,
        "editor.minimap.renderCharacters": false,
    },
    "gitlens.keymap": "alternate",
    "sync.removeExtensions": true,
    "sync.syncExtensions": true,

    "emojisense.emojiDecoratorsEnabled": false,
    "emojisense.unicodeCompletionsEnabled": true,
    "gitlens.defaultDateFormat": "MMM Do, YYYY h:mma",
    "gitlens.historyExplorer.enabled": true,
    "gitlens.blame.format": "${authorAgoOrDate|40-}",
    "gitlens.statusBar.enabled": false,

    "prettier.trailingComma": "es5",
    "zenMode.centerLayout": false,
    "zenMode.hideActivityBar": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,
    "spellright.language": [
        "en",
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "git-commit",
    ],
    "editor.tabSize": 2,
    "todohighlight.isEnable": true,
    "python.autoComplete.showAdvancedMembers": true,
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        ".tmp/**/*.py",
    ],
    "docker.showExplorer": true,
    "[git-commit]": {
        "editor.rulers": [50, 72],
    },
    "prettier.printWidth": 88,
    "prettier.disableLanguages": [
        "vue",
    ],
    "markdown-preview-enhanced.previewTheme": "github-light.css",
    "markdown-preview-enhanced.protocolsWhiteList": "http://, https://, mailto:, tel:",
    "breadcrumbs.enabled": false,
    "editor.acceptSuggestionOnEnter": "smart",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.quickSuggestionsDelay": 8,
    "markdownShortcuts.icons.italic": false,
    "markdownShortcuts.icons.bullets": false,
    "markdownShortcuts.icons.bold": false,
    "markdownShortcuts.icons.strikethrough": false,
    "editor.suggest.localityBonus": true,
    "git.allowForcePush": true,
    "git.rebaseWhenSync": true,
    "githubPullRequests.telemetry.enabled": false,
    "searchRipgrep.enable": true,
    "extensions.autoUpdate": true,
    "git.confirmSync": false,
    "githubPullRequests.hosts": [
        {
            "host": "https://github.com",
            "username": "oauth",
            "token": "system"
        }
    ],
    "markdownShortcuts.bullets.marker": "-",

    // TabNine auto-completer
    // "tabnine.disable_file_regex": [],
    // "tabnine.disable_line_regex": [],
    "editor.wordBasedSuggestions": false,
    "search.usePCRE2": true,
    "search.showLineNumbers": true,
    "terminal.integrated.experimentalBufferImpl": "TypedArray",
    "workbench.fontAliasing": "auto",
    "workbench.settings.editor": "json",
    "workbench.sideBar.location": "left",
    "gitlens.insiders": true,
    "gitlens.views.repositories.files.layout": "auto",
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
}
