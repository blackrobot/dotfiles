{
    /* Main config */
    "editor.fontFamily": "Operator Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.renderWhitespace": "boundary",
    "editor.lineNumbers": "relative",
    "editor.rulers": [79, 119],
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.occurrencesHighlight": false,
    "editor.renderLineHighlight": "gutter",
    "editor.renderControlCharacters": true,
    "editor.minimap.enabled": false,

    "explorer.openEditors.visible": 0,

    "files.useExperimentalFileWatcher": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },

    "search.quickOpen.includeSymbols": true,

    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",
    "terminal.integrated.scrollback": 2000,
    "terminal.integrated.fontSize": 13,

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "window.openFilesInNewWindow": "default",
    "window.nativeTabs": false,
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "window.zoomLevel": 0,

    "workbench.colorTheme": "One Dark Doom",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.labelFormat": "short",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.visible": false,

    /*
    "workbench.colorCustomizations": {
        "statusBar.background": "#0288d1",
        "statusBar.noFolderBackground": "#0288d1",
        "statusBar.debuggingBackground": "#0288d1"
        // "editor.lineHighlightBackground": "#282D39"
        // "editor.lineHighlightBackground": "#30353F"
    },
    */

    /* Vim config */
    "vim.leader": ",",
    "vim.cmdLineInitialColon": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.visualstar": true,
    "vim.foldfix": true,
    // vim: easy motion
    "vim.easymotion": true,
    "vim.easymotionMarkerFontWeight": "bold",
    // vim: status bar
    "vim.showmodename": false,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors" : {
        "normal": "#212121",
        "insert": "#0288d1",
        "visual": "#f50057",
        "visualline": "#f50057",
        "visualblock": "#e53935",
        "replace": "#d50000"
    },
    "vim.cursorStylePerMode": {
        "normal": "block",
        "insert": "line",
        "replace": "underline",
        "visual": "block-outline",
        "visualline": "block-outline",
        "visualblock": "block-outline"
    },
    // vim: neovim
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.disableAnnoyingNeovimMessage": true,
    // vim: key bindings
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["<C-n>"],
            "after": [],
            "commands": [{
                // "command": ":nohlsearch",
                "command": ":nohl",
                "args": []
            }]
        }
    ],


    /* Python config */
    "[python]": {
        "editor.rulers": [72, 79, 119],
        "editor.wordWrap": "off"
    },
    "python.pythonPath": "/usr/local/bin/python2",
    "python.venvPath": "~/.pyenv/versions/",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnTextChange": true,
    "python.autoComplete.addBrackets": true,

    /* Markdown config */
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
        "editor.quickSuggestions": false,
        "editor.tabSize": 4
    },
    "markdown.extension.italic.indicator": "_",

    /* Other extension config */
    "git.enableCommitSigning": true,

    "todohighlight.include": [
        "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.html",
        "**/*.php", "**/*.css", "**/*.scss", "**/*.py", "**/*.md",
        ""
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "#b71c1c",
        "color": "#FFF",
        "borderRadius": "2px",
        "padding": "1px"
    },
    "todohighlight.keywords": [
        "TODO:",
        "FIXME:",
        {
            "text": "XXX:",
            "color": "#FFF",
            "backgroundColor": "#b71c1c"
        },
        "???:",
        "!!!:",
        "BUG:",
        "HACK:",
        {
            "text": "NOTE:",
            "color": "#FFF",
            "backgroundColor": "#2196F3",
            "isWholeLine": false
        },
        "INFO:",
        "IDEA:"
    ],
    "gitlens.gitExplorer.files.layout": "tree",
    "gitlens.codeLens.recentChange.enabled": false,
    "material-icon-theme.showUpdateMessage": false,
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#212121",
        "statusBar.noFolderBackground": "#212121",
        "statusBar.debuggingBackground": "#212121"
    },
    "explorer.confirmDelete": false,
    "workbench.panel.location": "bottom",

    "terminal.integrated.commandsToSkipShell": [
        "editor.action.toggleTabFocusMode",
        "workbench.action.debug.continue",
        "workbench.action.debug.pause",
        "workbench.action.debug.restart",
        "workbench.action.debug.run",
        "workbench.action.debug.start",
        "workbench.action.debug.stop",
        "workbench.action.focusActiveEditorGroup",
        "workbench.action.focusFirstEditorGroup",
        "workbench.action.focusSecondEditorGroup",
        "workbench.action.focusThirdEditorGroup",
        "workbench.action.navigateDown",
        "workbench.action.navigateLeft",
        "workbench.action.navigateRight",
        "workbench.action.navigateUp",
        "workbench.action.openNextRecentlyUsedEditorInGroup",
        "workbench.action.openPreviousRecentlyUsedEditorInGroup",
        "workbench.action.quickOpen",
        "workbench.action.quickOpenPreviousEditor",
        "workbench.action.quickOpenView",
        "workbench.action.showCommands",
        "workbench.action.tasks.build",
        "workbench.action.tasks.restartTask",
        "workbench.action.tasks.runTask",
        "workbench.action.tasks.showLog",
        "workbench.action.tasks.showTasks",
        "workbench.action.tasks.terminate",
        "workbench.action.tasks.test",
        "workbench.action.terminal.clear",
        "workbench.action.terminal.copySelection",
        "workbench.action.terminal.deleteWordLeft",
        "workbench.action.terminal.deleteWordRight",
        "workbench.action.terminal.findWidget.history.showNext",
        "workbench.action.terminal.findWidget.history.showPrevious",
        "workbench.action.terminal.focus",
        "workbench.action.terminal.focusAtIndex1",
        "workbench.action.terminal.focusAtIndex2",
        "workbench.action.terminal.focusAtIndex3",
        "workbench.action.terminal.focusAtIndex4",
        "workbench.action.terminal.focusAtIndex5",
        "workbench.action.terminal.focusAtIndex6",
        "workbench.action.terminal.focusAtIndex7",
        "workbench.action.terminal.focusAtIndex8",
        "workbench.action.terminal.focusAtIndex9",
        "workbench.action.terminal.focusFindWidget",
        "workbench.action.terminal.focusNext",
        "workbench.action.terminal.focusPrevious",
        "workbench.action.terminal.hideFindWidget",
        "workbench.action.terminal.kill",
        "workbench.action.terminal.new",
        "workbench.action.terminal.paste",
        "workbench.action.terminal.runActiveFile",
        "workbench.action.terminal.runSelectedText",
        "workbench.action.terminal.scrollDown",
        "workbench.action.terminal.scrollDownPage",
        "workbench.action.terminal.scrollToBottom",
        "workbench.action.terminal.scrollToTop",
        "workbench.action.terminal.scrollUp",
        "workbench.action.terminal.scrollUpPage",
        "workbench.action.terminal.selectAll",
        "workbench.action.terminal.toggleTerminal",
        "workbench.action.togglePanel",

        // Vim commands
        "extension.vim_navigateLeft",
        "extension.vim_navigateRight",
        "extension.vim_navigateGroups",
        "extension.vim_navigateDown",
        "extension.vim_navigateUp",
        "extension.vim_ctrl+w"
    ]
}