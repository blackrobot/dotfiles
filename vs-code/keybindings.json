[

/**
 * Use <⇧ + ⌘ + \> to toggle between horizontal and vertical split layouts
 */
{
  "key": "shift+cmd+\\",
  "command": "workbench.action.toggleEditorGroupLayout",
},

/**
 * Use <⇧ + Enter> for reverse find, and remove it elsewhere
 */
{
  "key": "shift+enter",
  "command": "-python.execSelectionInTerminal",
},
{
  "key": "shift+enter",
  "command": "-markdown-preview-enhanced.runCodeChunk",
},
{
  "key": "shift+enter",
  "command": "-markdown.extension.onShiftEnterKey",
},
{
  "key": "shift+cmd+enter",
  "command": "-editor.action.insertLineBefore",
},

/**
 * Markdown
 * ---
 * Only use keyboard shortcuts for editing text when in vim insert mode.
 */
{
  // Use <⌘ + b> to enbolden text, only in vim insert mode
  "key": "cmd+b",
  "command": "markdown.extension.editing.toggleBold",
  "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown' && vim.active && vim.mode == 'Insert'",
},
{
  // Remove <⌘ + b> when not in vim insert mode
  "key": "cmd+b",
  "command": "-markdown.extension.editing.toggleBold",
  // "when": "vim.active && vim.mode != 'Insert'",
},
{
  // Use <⌘ + i> to italicize text, only in vim insert mode
  "key": "cmd+i",
  "command": "markdown.extension.editing.toggleItalic",
  "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown' && vim.active && vim.mode == 'Insert'",
},
{
  // Remove <⌘ + i> when not in vim insert mode
  "key": "cmd+i",
  "command": "-markdown.extension.editing.toggleItalic",
  // "when": "vim.active && vim.mode != 'Insert'"
},

]