# vim: set ft=zsh:
alias grepir='grep -Ir'
alias ssh='TERM=xterm-256color ssh'
alias mkdirs='mkdir -p'

function __mkcd {
  mkdir -p "$@" && cd "$_"
}
alias mkcd='__mkcd'

# ls
alias ls='gls'
alias l='ls -AFlh --color=auto'
alias ll='ls -aFlh --color=auto'

# cheat.sh
function cheat {
  curl "cheat.sh/${1}"
}

# Git
alias gr='git reset'
alias grh='git reset --hard'

alias gf='git fetch --prune'
alias gfa='git fetch --all --prune'

# fast copying files
alias rcopy='rsync -vhxpogiW --progress --stats --numeric-ids'
# rsync --verbose \
#       --human-readable \
#       --one-file-system \
#       --itemize-changes \
#       --progress \
#       --stats \
#       --rsh "ssh -T -c ${ciphers} -o Compression=no -x" \
#       source:/path/to/files /path/to/dest [/path/to/other-dest...]
# lookup remote ssh algos using: nmap --script ssh2-enum-algos -sV -p <port> <host>
alias rcopy-remote='rsync -vhxirP --stats --progress -e "ssh -T -c aes128-gcm@openssh.com,aes256-gcm@openssh.com,aes128-ctr,aes192-ctr,aes256-ctr,* -o Compression=no -x"'